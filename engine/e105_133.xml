    <svcman/>
    <svcproc svcproctype="proctype" graphiccount="2">
        <title>FLYWHEEL HOUSING REMOVAL, OUT-OF-CHASSIS</title>
        <svcprocinfo>
            <para>Perform the following steps (
                <emph type="bold">Figure
                    <hotlnk xrefid="ef1050708">7.8</hotlnk>
                </emph>
                ).
            </para>
        </svcprocinfo>
        <step1>
            <para count="1">Remove securing the flywheel housing to crankcase.</para>
        </step1>
        <step1>
            <para count="1">Remove flywheel housing from crankcase.</para>
