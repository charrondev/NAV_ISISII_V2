                <colspec colname="1" colwidth="58p"/>
                <colspec colname="2" colwidth="72p"/>
                <colspec colname="3" colwidth="54p"/>
                <colspec colname="4" colwidth="284p"/>
                <spanspec namest="1" nameend="4" spanname="S1T4"/>
                <spanspec namest="3" nameend="4" spanname="S3T4"/>
