    </stitle>
    <svcman/>
    <svcproc graphiccount="1">
        <title>Injection Pressure Regulator (IPR) Valve</title>
        <figure id="f1201110" figsize="col-wide">
            <graphic filename="../figeg3/EG3512.webp" type="webp" scalefit="1" scalefitwidth="248px" box="yes"/>
