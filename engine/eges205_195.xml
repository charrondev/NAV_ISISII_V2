    <svcsubsec>
        <title>Piston Cooling Jets</title>
        <svcproc svcproctype="describe" graphiccount="1">
            <title>Removal</title>
            <figure id="f1200767" figsize="col-wide">
                <graphic filename="../figeg1/EG1856.webp" type="webp" scalefit="1" scalefitwidth="248px" box="yes"/>
