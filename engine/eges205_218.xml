    </stitle>
    <svcman/>
    <svcsubsec>
        <title>Oil Cooler</title>
        <svcproc graphiccount="1">
            <title>Removal</title>
            <step1>
                <para count="1">Drain coolant from the engine.</para>
            </step1>
            <figure id="f1200902" figsize="col-wide">
                <graphic filename="../figeg1/EG1955.webp" type="webp" scalefit="1" scalefitwidth="248px" box="yes"/>
                <caption>Removing Oil Cooler Assembly</caption>
                <calloutgroup>
                    <callout1 type="arabic">Oil Cooler Assembly</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove and discard oil filter.</para>
            </step1>
            <step1>
                <para count="1">Remove oil cooler assembly from crankcase and front cover mounting pads.</para>
            </step1>
        </svcproc>
    </svcsubsec>
