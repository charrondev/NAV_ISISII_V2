    <svcman/>
    <svcproc id="s210010604.2" graphiccount="1">
        <title>Adjust Cylinder Sleeve Protrusion</title>
        <step1>
            <para id="s210010604.2.1" count="1">Remove Cylinder Liner Holding Adapters and cylinder sleeve.</para>
        </step1>
        <step1>
            <para count="1">Clean crankcase top deck and cylinder sleeve counterbore.</para>
        </step1>
