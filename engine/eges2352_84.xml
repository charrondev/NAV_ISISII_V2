<isis lang="en">
    <stitle>INTERNATIONAL&#174; VT 365 DIESEL ENGINE - FRONT COVER, VIBRATION DAMPER, and GEROTOR OIL PUMP - Removal -
        Thermostat
    </stitle>
    <svcman/>
    <svcproc svcproctype="remove" graphiccount="2">
        <title>Thermostat</title>
        <figure id="f2350510" figsize="col-wide">
            <graphic filename="../figd05/D0503.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
            <caption>Figure 226. Thermostat assembly mounting bolts</caption>
            <calloutgroup>
                <callout1 type="arabic">Thermostat assembly mounting bolt M8 x 30 (2)</callout1>
                <callout1 type="arabic">Coolant outlet side of front cover</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove two M8 x 30 bolts that secure thermostat assembly to left side of front cover.</para>
        </step1>
        <figure id="f2350511" figsize="col-wide">
            <graphic filename="../figd05/D0504.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
            <caption>Figure 227. Thermostat assembly</caption>
            <calloutgroup>
                <callout1 type="arabic">Thermostat assembly</callout1>
                <callout1 type="arabic">O-ring</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove thermostat assembly from front cover.</para>
        </step1>
        <step1>
            <para count="1">Remove and discard O-ring.</para>
        </step1>
    </svcproc>
