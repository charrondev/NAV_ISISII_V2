                <graphic id="d3373" filename="../figd33/D3373.webp" type="webp" scalefit="1" scalefitwidth="432px"
                         scalefitheight="592px"/>
                <caption>ATA Circuit Diagram</caption>
            </figure>
            <table id="te24007016" tblwidth="pg-wide" frame="bottom">
