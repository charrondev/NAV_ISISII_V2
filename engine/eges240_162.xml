                                <para>X3-11 to X3-7</para>
                            </entry>
                            <entry colname="col2">
                                <para>12V &#177;1.5</para>
                            </entry>
                            <entry colname="COLSPEC0">
                                <para>TACH A</para>
                            </entry>
