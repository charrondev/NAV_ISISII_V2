    </stitle>
    <svcman/>
    <svcproc graphiccount="1">
        <title>Front Engine Mount</title>
        <figure id="f2650624" figsize="col-wide">
            <graphic filename="../figh10/H10004.webp" type="webp" scalefit="1" scalefitwidth="248px"/>
            <caption>Front engine mounting bracket</caption>
            <calloutgroup>
                <callout1 type="arabic">Bolt, M18 x 70 (2)</callout1>
                <callout1 type="arabic">Bolt, M18 x 100 (2)</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para count="1">Remove two upper bolts (M18 x 70).</para>
        </step1>
        <step1>
            <para count="1">Support engine mounting bracket and remove two lower bolts (M18 x 100).</para>
        </step1>
        <step1>
            <para count="1">Remove front engine mounting bracket.</para>
        </step1>
    </svcproc>
