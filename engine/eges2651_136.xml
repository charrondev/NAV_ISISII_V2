            <calloutgroup>
                <callout1 type="arabic">Fan pulley</callout1>
                <callout1 type="arabic">Bolt, M8 x 65 (4)</callout1>
                <callout1 type="arabic">Fan spacer</callout1>
                <callout1 type="arabic">Fan hub assembly (cross-hatched)</callout1>
