    <stitle>DT 466 / DT 570 / HT 570 Service Manual - 2004 Emissions with EGR - Crankcase, Crankshaft, and Camshaft -
        Installation - Camshaft Bushings
    </stitle>
    <svcman/>
    <svcproc graphiccount="5">
        <title>Camshaft Bushings</title>
        <step1>
            <para count="1">Identify each camshaft bushing according to its outside diameter.</para>
        </step1>
        <table id="t265090.5" frame="topbot">
            <tgroup cols="3">
                <colspec colnum="1" colname="col1" colwidth="1.02*"/>
                <colspec colnum="2" colname="col2" colwidth="1.13*"/>
                <colspec colnum="3" colname="COLSPEC0" colwidth="0.85*"/>
                <tbody>
                    <row>
                        <entry>
                            <para>
                                <emph type="bold">Bushing Location</emph>
                            </para>
                        </entry>
                        <entry>
                            <para>
                                <emph type="bold">Outside Diameter (nominal)</emph>
                            </para>
                        </entry>
                        <entry>
                            <para>
                                <emph type="bold">Width (nominal)</emph>
                            </para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Front</para>
                        </entry>
                        <entry>
                            <para>65.5 mm (2.50 in)</para>
                        </entry>
                        <entry>
                            <para>25.4 mm (1.00 in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Rear</para>
                        </entry>
                        <entry>
                            <para>65.5 mm (2.50 in)</para>
                        </entry>
                        <entry>
                            <para>17.8 mm (0.70 in)</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Intermediate</para>
                        </entry>
                        <entry>
                            <para>63.0 mm (2.48 in)</para>
