                    <row>
                        <entry colname="COLSPEC0">
                            <para>Lower crankcase main bearing cap bolts</para>
                        </entry>
                        <entry colname="COLSPEC2" align="right">
                            <para>See tightening procedure and sequence</para>
                        </entry>
                    </row>
                    <row>
                        <entry colname="COLSPEC0">
                            <para>Lower crankcase outer bolts (M8 x 30), standard torque</para>
                        </entry>
                        <entry colname="COLSPEC2" align="right">
                            <para></para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <para>Coolant heater element</para>
                        </entry>
                        <entry align="right">
                            <para>41 N&#183;m (30 lbf&#183;ft)</para>
                        </entry>
                    </row>
