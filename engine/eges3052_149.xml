        <svcsubproc id="s305010706.23.3">
            <title>IAH Pin-Point Diagnostics</title>
            <figure id="f3050107109" figsize="pg-wide">
                <graphic filename="../figj31/j31203.webp" type="webp" scalefit="1" scalefitwidth="392px"
                         scalefitheight="532px"/>
