    <svcman/>
    <svcproc svcproctype="install" graphiccount="1">
        <title>Camshaft Position (CMP) Sensor</title>
        <figure id="f3350003118" figsize="col-wide">
            <graphic filename="../figk09/K09011.webp" type="webp" scalefit="1" scalefitwidth="248px" box="no"/>
            <caption>CMP sensor</caption>
            <calloutgroup>
                <callout1 type="arabic">M8 x 16 bolt</callout1>
                <callout1 type="arabic">CMP sensor</callout1>
                <callout1 type="arabic">M6 x 16 sensor retaining bolt</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para id="s0338" count="1">Install a new O-ring on the CMP sensor.</para>
        </step1>
        <step1>
            <para count="1">Install CMP sensor into front cover.</para>
        </step1>
        <step1>
            <para count="1">Install M6 x 16 sensor retaining bolt and tighten to
                <hotlnk document="eges3351_SAPPB01.xml" xrefid="sAppB01">standard torque</hotlnk>
                <xref refid="sAppB01"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Connect sensor harness connector to the CMP sensor.</para>
        </step1>
    </svcproc>
