    <svcsubsec>
        <title>Engine Cooling System</title>
        <svcsubsecinfo>
            <figure id="f370001" figsize="pg-wide">
                <graphic filename="../figk35/k35130.webp" type="webp" scalefit="1" scalefitwidth="408px" box="no"/>
                <caption>Cooling system components and flow</caption>
            </figure>
            <para id="s0124">The engine cooling system includes the following:</para>
            <randlist type="bullet">
                <item>
                    <para>Chassis mounted radiator</para>
                </item>
                <item>
                    <para>Fan</para>
                </item>
                <item>
                    <para>Water inlet elbow</para>
                </item>
                <item>
                    <para>Front engine covers</para>
                </item>
                <item>
                    <para>Water pump</para>
                </item>
                <item>
                    <para>Crankcase</para>
                </item>
                <item>
                    <para>Cylinder sleeves</para>
                </item>
                <item>
                    <para>Cylinder head</para>
                </item>
                <item>
                    <para>Oil system module assembly</para>
                </item>
                <item>
                    <para>Air compressor</para>
                </item>
                <item>
                    <para>Thermostat</para>
                </item>
                <item>
                    <para>Dual EGR coolers</para>
                </item>
                <item>
                    <para>EGR control valve</para>
                </item>
                <item>
                    <para>Surge tank</para>
                </item>
                <item>
                    <para>Coolant heater</para>
                </item>
            </randlist>
        </svcsubsecinfo>
    </svcsubsec>
