    <svcman/>
    <svcproc graphiccount="1">
        <title>Alternator</title>
        <figure id="e3001130.5.5" figsize="col-wide">
            <graphic filename="../figj09/j09045.webp" type="webp" scalefit="1" scalefitwidth="248px"
                     scalefitheight="392px"/>
            <caption>Alternator and sensor harness connections</caption>
            <calloutgroup>
                <callout1 type="arabic">Alternator control harness connector</callout1>
                <callout1 type="arabic">Alternator power connector</callout1>
            </calloutgroup>
        </figure>
        <step1>
            <para id="s0347" count="1">Install three M10 x 80 bolts holding the alternator to the intake manifold.
            </para>
        </step1>
        <step1>
            <para count="1">Tighten three M10 x 80 bolts to
                <hotlnk document="eges390_123.xml" xrefid="t390000302">special torque</hotlnk>
                <xref refid="t390000302"/>.
            </para>
        </step1>
        <step1>
            <para count="1">Install the alternator power connector nut and tighten to special torque.</para>
        </step1>
        <step1>
            <para count="1">Install the rubber boot over the power connector nut.</para>
        </step1>
        <step1>
            <para count="1">Install the alternator control harness connector.</para>
        </step1>
    </svcproc>
