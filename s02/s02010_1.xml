        <title>FRONT DRIVE AXLE WHEEL ENDS: FABCO SDA-12</title>
        <apply>
            <configure>
                <vendorgroup/>

                <vendor>FABCO</vendor>
                <truckmodelgroup/>

                <truckmodel>4000</truckmodel>
