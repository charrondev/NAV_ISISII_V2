    <svcsection id="s03007" svcsectype="prodspec" division="truck" formnum="CTS-5125" date="03/31/1996">
        <title>HENDRICKSON AIR SUSPENSION WITH TRAILING LEAF SPRINGS</title>
        <apply>
            <configure>
                <vendorgroup/>

                <vendor>HENDRICKSON</vendor>
                <truckmodelgroup/>

                <truckmodel>2000</truckmodel>
                <truckmodel>5000</truckmodel>
                <truckmodel>9100</truckmodel>
                <truckmodel>9200</truckmodel>
