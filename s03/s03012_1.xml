    <stitle>INTERNATIONAL RIDE OPTIMIZED SUSPENSION (IROS)</stitle>
    <svcsection/>
    <svcsection id="s03012" svcsectype="prodspec" division="truck" date="04/15/2002">
        <title>INTERNATIONAL RIDE OPTIMIZED SUSPENSION (IROS)</title>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>4000</truckmodel>
                <truckmodel>4200</truckmodel>
                <truckmodel>4300</truckmodel>
                <truckmodel>4400</truckmodel>
                <truckmodel>7000</truckmodel>
                <truckmodel>8100</truckmodel>
                <truckmodel>8200</truckmodel>
                <truckmodel>8300</truckmodel>
                <truckmodel>9000i</truckmodel>
                <ucodegroup/>

                <ucode>14UNN</ucode>
                <ucode>14UNM</ucode>
                <ucode>14UNL</ucode>
                <ucode>14UNH</ucode>
