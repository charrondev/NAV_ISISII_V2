            </figure>
            <para>
                <hotlnk xrefid="f0402850">Testing Traction Control ON/OFF Switch (Continued)</hotlnk>
            </para>
            <figure id="f0402850" figsize="col-wide">
                <graphic id="g0402850" filename="../figg04/G0402850.webp" type="webp"/>
