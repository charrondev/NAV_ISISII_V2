                    <colspec colname="3" charoff="50" colwidth="1.44in"/>
                    <colspec colname="4" charoff="50" colwidth="0.82in"/>
                    <colspec colname="5" charoff="50" colwidth="1.12in"/>
                    <colspec colname="6" charoff="50" colwidth="0.93in"/>
                    <colspec colname="7" charoff="50" colwidth="1.43in"/>
                    <spanspec namest="1" nameend="7" spanname="SPAN2"/>
                    <spanspec namest="2" nameend="7" spanname="SPAN1"/>
