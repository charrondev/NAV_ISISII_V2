    <stitle>ELECTRICAL SYSTEM TROUBLESHOOTING GUIDE - 3200, 4100, 4200, 4300, 4400, 7300, 7400, 7500, 7600, 8500, 8600
        Models Built After 05/19/2003 - ELECTRICAL SYSTEM CONTROLLER AND SWITCH PACKS - ELECTRICAL SYSTEM CONTROLLER
    </stitle>
    <svcman/>
    <svcsubsec id="x082531">
        <title>ELECTRICAL SYSTEM CONTROLLER</title>
        <svcproc svcproctype="describe" graphiccount="2">
            <title>DESCRIPTION</title>
            <figure id="f0825301" figsize="pg-wide">
                <graphic filename="../figg08/g0825301.webp" type="webp" scalefit="1" scalefitwidth="352px"/>
                <calloutgroup>
                    <callout1>(1600) 36 WAY ESC CONNECTOR (INSIDE CAB)</callout1>
                    <callout1>(1601) BROWN 8 WAY ESC CONNECTOR (INSIDE CAB)</callout1>
                    <callout1>(4004) 36 WAY ESC CONNECTOR (ENGINE COMPARTMENT)</callout1>
                    <callout1>(4007) BROWN 8 WAY ESC CONNECTOR (ENGINE COMPARTMENT)</callout1>
                    <callout1>(4008) BLUE 8 WAY ESC CONNECTOR (ENGINE COMPARTMENT)</callout1>
                    <callout1>(4009) ESC POWER CONNECTOR</callout1>
