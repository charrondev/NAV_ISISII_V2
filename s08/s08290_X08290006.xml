    <stitle>Electrical System Troubleshooting Guide - BE 200, CE 200, CE 300 Model - ELECTRICAL SYSTEM CONTROLLER AND
        SWITCH PACKS - ELECTRICAL SYSTEM CONTROLLER
    </stitle>
    <svcman/>
    <svcsubsec id="x08290006">
        <title>ELECTRICAL SYSTEM CONTROLLER</title>
        <svcproc svcproctype="describe" graphiccount="2">
            <title>Description</title>
            <figure id="f08290401" figsize="pg-wide">
                <graphic filename="../figg08/G08290401.webp" type="webp" scalefit="1" scalefitwidth="352px"/>
                <calloutgroup>
                    <callout1>(1600) 36 WAY ESC CONNECTOR</callout1>
                    <callout1>(1601) BROWN 8 WAY ESC CONNECTOR</callout1>
                    <callout1>(1602) 36 WAY ESC CONNECTOR</callout1>
                    <callout1>(1603) BROWN 8 WAY ESC CONNECTOR</callout1>
                    <callout1>(1604) BLUE 8 WAY ESC CONNECTOR</callout1>
                </calloutgroup>
