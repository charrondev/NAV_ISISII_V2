<isis lang="en">
    <stitle>CF 500, CF 600 - Electrical - Horn - Removal and Installation</stitle>
    <svcsection/>
    <svcproc svcproctype="remove" graphiccount="3">
        <title>Removal and Installation</title>
        <svcsubproc>
            <title>Horn</title>
            <step1>
                <para count="1">Remove the radiator grille retaining screw.</para>
            </step1>
            <figure id="f1306005" figsize="col-wide">
                <graphic filename="../fign00/N0020561.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="232px"/>
            </figure>
            <step1>
                <para count="1">Remove the radiator grille.</para>
            </step1>
            <step1>
                <para count="1">Remove the horn assembly nut.</para>
                <para>&#8226; To install, tighten to 9 Nm (80 lb-in).</para>
            </step1>
            <figure id="f1306006" figsize="col-wide">
                <graphic filename="../fign00/N0020223.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="232px"/>
            </figure>
            <step1>
                <para count="1">Remove the horn assembly.</para>
            </step1>
            <step1>
                <para count="1">Disconnect the electrical connector.</para>
            </step1>
            <step1>
                <para count="1">To install, reverse the removal procedure.</para>
            </step1>
        </svcsubproc>
        <svcsubproc>
            <title>Horn Switch</title>
            <step1>
                <para count="1">Remove the horn pad.</para>
            </step1>
            <step1>
                <para count="1">Disconnect the electrical connector.</para>
            </step1>
            <step1>
                <para count="1">Remove the 2 horn switch retaining screws.</para>
            </step1>
            <figure id="f1306008" figsize="col-wide">
                <graphic filename="../fign00/N0020222.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="232px"/>
            </figure>
            <step1>
                <para count="1">Remove the horn switch.</para>
            </step1>
            <step1>
                <para count="1">To install, reverse the removal procedure.</para>
            </step1>
        </svcsubproc>
    </svcproc>
