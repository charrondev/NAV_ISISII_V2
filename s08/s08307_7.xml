                            <entry align="center">
                                <para>Electrical</para>
                            </entry>
                        </row>
                    </thead>
                    <tbody>
                        <row>
                            <entry>
                                <randlist type="bullet">
                                    <item>
                                        <para>Bulbs</para>
                                    </item>
                                    <item>
                                        <para>Circuitry open/shorted</para>
                                    </item>
                                    <item>
                                        <para>Dimmer</para>
                                    </item>
                                    <item>
                                        <para>Hazard, cruise set/enable or A/C switch</para>
                                    </item>
                                    <item>
                                        <para>Climate control</para>
                                    </item>
                                    <item>
                                        <para>Instrument cluster</para>
                                    </item>
