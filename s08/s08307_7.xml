        <svcsubproc>
            <title>Inspection and Verification</title>
            <step1>
                <para count="1">Verify the customer concern.</para>
            </step1>
            <step1>
                <para count="1">Visually inspect for obvious signs of electrical damage.</para>
            </step1>
            <table id="t1300004">
                <title>Visual Inspection Chart</title>
