    <stitle>CF 500, CF 600 - Electrical - Instrument Cluster and Panel Illumination - Removal and Installation</stitle>
    <svcsection/>
    <svcproc svcproctype="remove" graphiccount="2">
        <title>Removal and Installation</title>
        <svcsubproc>
            <title>Instrument Panel Dimmer Switch</title>
            <step1>
                <para count="1">Remove the instrument panel dimmer knob.</para>
            </step1>
            <figure id="f1300005" figsize="col-wide">
                <graphic filename="../fign00/N0020219.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="232px"/>
            </figure>
            <step1>
                <para count="1">Remove the instrument panel dimmer retaining nut.</para>
            </step1>
            <figure id="f1300006" figsize="col-wide">
                <graphic filename="../fign00/N0020220.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="232px"/>
            </figure>
            <step1>
                <para count="1">Remove the instrument panel dimmer.</para>
            </step1>
            <step1>
                <para count="1">Disconnect the electrical connector.</para>
            </step1>
            <step1>
                <para count="1">To install, reverse the removal procedure.</para>
            </step1>
        </svcsubproc>
    </svcproc>
