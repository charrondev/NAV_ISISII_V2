            <calloutgroup>
                <callout1>1. HEADLIGHT</callout1>
                <callout1>2. VERTICAL ADJUSTMENT SCREW</callout1>
                <callout1>3. HORIZONTAL ADJUSTMENT SCREW</callout1>
            </calloutgroup>
        </figure>
    </svcproc>
