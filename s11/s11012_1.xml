    <svcsection id="s11012" division="truck" formnum="CTS-5268" date="11/05/1999">
        <title>SPICER 15-1/2 INCH (394 MM) SOLO&#8482; CLUTCH</title>
        <apply>
            <configure>
                <ucodegroup/>

                <ucode>11MDY</ucode>
