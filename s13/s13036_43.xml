    <svcsubproc>
        <title>Manual Control Lever Shaft and Seal Removal</title>
        <table id="t07010147">
            <title>Special Tools</title>
            <tgroup cols="2">
                <colspec colname="col1" colwidth="0.94*"/>
                <colspec colname="col2" colwidth="1.06*"/>
                <tbody>
                    <row>
                        <entry>
                            <graphic filename="../figST1/ST1634A.webp" type="webp" scalefit="1" scalefitwidth="112px"
                                     scalefitheight="112px"/>
                        </entry>
                        <entry>
                            <para>Roll Pin Set</para>
                            <para>ZTSE9101</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
                            <graphic filename="../figST1/ST1199A.webp" type="webp" scalefit="1" scalefitwidth="112px"
                                     scalefitheight="112px"/>
                        </entry>
                        <entry>
                            <para>Installer, Shift Shaft Fluid Seal</para>
                            <para>ZTSE9102</para>
                        </entry>
                    </row>
                    <row>
                        <entry>
