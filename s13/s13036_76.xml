    <svcsubproc>
        <title>Forward Geartrain Assembly - Assembly</title>
        <table id="t07010166">
            <title>Special Tools</title>
            <tgroup cols="2">
                <colspec colname="col1" colwidth="0.94*"/>
                <colspec colname="col2" colwidth="1.06*"/>
                <tbody>
                    <row>
