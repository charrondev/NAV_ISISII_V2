    <svcsection/>
    <svcproc id="hl1401501" svcproctype="describe" graphiccount="5">
        <title>SPECIAL TOOLS</title>
        <para>
            <hotlnk xrefid="f1401543">ZTOEM 6600 STAKING TOOL</hotlnk>
        </para>
        <figure id="f1401543" figsize="col-wide">
