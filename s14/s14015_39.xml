        </figure>
        <para>
            <hotlnk xrefid="f1401544">ZTOEM 4193 CARRIER OVERHAUL STAND</hotlnk>
        </para>
        <figure id="f1401544" figsize="col-wide">
            <graphic id="g1401544" filename="../figg14/G1401544.webp" type="webp" scalefit="1" scalefitwidth="248px"
