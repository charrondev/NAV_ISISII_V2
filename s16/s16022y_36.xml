                    <callout1>4. CONDUIT</callout1>
                    <callout1>5. MALE SPADE CONNECTOR</callout1>
                    <callout1>6. FEMALE SPADE CONNECTOR</callout1>
                    <callout1>7. 3/8 INCH RING TERMINAL</callout1>
