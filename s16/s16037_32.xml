    <svcproc svcproctype="pm" graphiccount="1">
        <title>Cleaning Evaporator Filter</title>
        <figure id="f1603724" figsize="pg-wide">
            <graphic filename="../figg16/g1603724.webp" type="webp" scalefit="1" scalefitwidth="328px"
                     scalefitheight="272px"/>
            <caption>Figure 24. Cleaning Evaporator Filter</caption>
        </figure>
        <seqlist style="arabic">
            <item>
                <para>Pull out white filter retaining clips.</para>
            </item>
            <item>
                <para>Remove filter.</para>
            </item>
            <item>
                <para>Soak filter in soapy water.</para>
            </item>
            <item>
                <para>Blow dry with compressed air.</para>
            </item>
        </seqlist>
    </svcproc>
