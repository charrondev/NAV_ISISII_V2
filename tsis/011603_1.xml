<isis lang="en">
    <stitle>TSI 01-16-03 - Air Intake Scoop Design Improvement for All 5900i, 9900i and 9900ix Models with Dual External
        Air Cleaners and HVAC System
    </stitle>
    <tsi id="tsi011603" tsitype="truck">
        <tsinumber>01-16-03</tsinumber>
        <tsidate>March, 2001</tsidate>
        <subjectfile>CAB</subjectfile>
        <subjectgroup>
            <subject>Air Intake Scoop Design Improvement for All 5900i, 9900i and 9900ix Models with Dual External Air
                Cleaners and HVAC System
            </subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>5900i</truckmodel>
                <truckmodel>9900i</truckmodel>
                <truckmodel>9900ix</truckmodel>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>5900i, 9900i and 9900ix Models with dual external air cleaners may have reduced air flow from the
                    HVAC system. Addition of improved design air scoop will improve HVAC air flow.
                </para>
            </geninfo>
        </description>
        <partsinfo>
            <table id="t0116031">
                <title>Parts Information</title>
                <tgroup cols="3">
                    <colspec colname="colspec0" colwidth="1.53in"/>
                    <colspec colname="col1" colwidth="2.42in"/>
                    <colspec colname="col2" colwidth="1.29in"/>
                    <thead>
                        <row>
                            <entry colname="colspec0" colsep="1" rowsep="1" valign="top" align="center" charoff="50"
                                   char="">
                                <para>Part Number</para>
                            </entry>
                            <entry colname="col1" colsep="1" rowsep="1" valign="top" align="center" charoff="50"
                                   char="">
                                <para>Description</para>
                            </entry>
                            <entry colname="col2" colsep="1" rowsep="1" valign="top" align="center" charoff="50"
                                   char="">
                                <para>Quantity</para>
                            </entry>
                        </row>
                    </thead>
                    <tbody>
                        <row>
                            <entry colname="colspec0" colsep="1" rowsep="1" valign="top" align="center" charoff="50"
                                   char="">
                                <para>3563297C91</para>
                            </entry>
                            <entry colname="col1">
                                <para>Air Intake Scoop Kit</para>
                            </entry>
