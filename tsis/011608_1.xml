    <stitle>TSI 01-16-08 - Heater Shutoff Valve, Code 16554</stitle>
    <tsi id="tsi011608" tsitype="truck">
        <tsinumber>01-16-08</tsinumber>
        <tsidate>December, 2001</tsidate>
        <subjectfile>CAB</subjectfile>
        <subjectgroup>
            <subject>Heater Shutoff Valve, Code 16554</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>4300
                    <daterange>
                        <enddate>09/27/2001</enddate>
                    </daterange>
