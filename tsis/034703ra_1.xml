<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>TSI 03-47-03RA - Addition of Water Separator to Air Door to Prevent Freeze-Ups on 3000 FE, 3000 IC, 3000 RE
        Bus Models Built Before April 24, 2000
    </stitle>
    <tsi id="tsi034703RA" tsitype="truck">
        <tsinumber>03-47-03RA</tsinumber>
        <replace>
            <tsinumber>03-47-03R</tsinumber>
        </replace>
        <tsidate>May, 2003</tsidate>
        <subjectfile>Bus Body</subjectfile>
        <subjectgroup>
            <subject>Addition of Water Separator to Air Door to Prevent Freeze-Ups on 3000 FE, 3000 IC, 3000 RE Bus
                Models Built Before April 24, 2000
            </subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>3000 FE
                    <daterange>
                        <enddate>04/24/2000</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>3000 RE
                    <daterange>
                        <enddate>04/24/2000</enddate>
                    </daterange>
                </truckmodel>
                <truckmodel>IC BUS
                    <daterange>
                        <enddate>04/24/2000</enddate>
                    </daterange>
                </truckmodel>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>This procedure is designed to prevent freeze-ups and other problems related to air controlled
                    entrance door operation during cold weather in 3000 FE, 3000 IC, and 3000 RE Bus Models built before
                    April 24, 2000.
                </para>
                <para>
                    <emph type="bold">Tools Required:</emph>
                </para>
                <randlist type="bullet">
                    <item>
                        <para>9/16" combination Wrench</para>
                    </item>
                    <item>
                        <para>9/16" Socket Wrench</para>
                    </item>
                    <item>
                        <para>Air hose tip to fit a 1/4" hose</para>
                    </item>
                    <item>
                        <para>Shop air system with a filter attached</para>
                    </item>
                </randlist>
            </geninfo>
        </description>
        <partsinfo>
            <table id="t0347031">
                <title>Parts Information</title>
                <tgroup cols="3" align="center">
                    <colspec colname="col1" colwidth="0.95*"/>
                    <colspec colname="col2" colwidth="1.42*"/>
                    <colspec colname="col3" colwidth="0.63*"/>
                    <thead>
                        <row>
                            <entry>
                                <para>
                                    <emph type="bold">Part Number</emph>
                                </para>
                            </entry>
                            <entry>
                                <para>
                                    <emph type="bold">Description</emph>
                                </para>
                            </entry>
                            <entry>
                                <para>
                                    <emph type="bold">Quantity</emph>
                                </para>
                            </entry>
                        </row>
                    </thead>
                    <tbody>
                        <row>
                            <entry>
                                <para>443978</para>
                            </entry>
                            <entry>
                                <para>Fitting</para>
                            </entry>
                            <entry>
                                <para>1</para>
                            </entry>
                        </row>
                        <row>
                            <entry>
                                <para>453442001</para>
                            </entry>
                            <entry>
                                <para>Water Separator</para>
                            </entry>
                            <entry>
                                <para>1</para>
                            </entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </partsinfo>
        <svcproc svcproctype="replace" graphiccount="4">
            <title>SERVICE PROCEDURE:</title>
            <specpara>
                <warning>
                    <para>To prevent property damage or personal injury, park the vehicle on a level surface, set the
                        parking brake, chock the wheels, and turn the engine off.
                    </para>
                </warning>
            </specpara>
            <figure id="f0347031" figsize="col-wide">
                <graphic filename="../tsifigures/G0347031.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="288px"/>
                <caption>Figure 1. Air Tank 1/4" Hose</caption>
                <calloutgroup>
                    <callout1>1. 1/4" HOSE CONNECTION</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Open any drain valves on all air tanks. Close when all water has been removed from tanks
                    <hotlnk xrefid="f0347031">(Figure 1)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Disconnect 1/4" air hose from air tank underneath bus
                    <hotlnk xrefid="f0347031">(Figure 1)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Disconnect incoming 1/4" air hose from air regulator
                    <hotlnk xrefid="f0347033">(Figure 3)</hotlnk>.
                </para>
            </step1>
            <figure id="f0347032" figsize="pg-wide">
                <graphic filename="../tsifigures/G0347032.webp" type="webp" scalefit="1" scalefitwidth="272px"
                         scalefitheight="312px"/>
                <caption>Figure 2. Blow Out Hose</caption>
            </figure>
            <specpara>
                <warning>
                    <para>To avoid personal injury always wear breathing and eye protection when using compressed air.
                    </para>
                </warning>
            </specpara>
            <step1>
                <para count="1">Blow filtered dry air through the detached 1/4" air hose with an air nozzle until all
                    moisture is removed
                    <hotlnk xrefid="f0347032">(Figure 2)</hotlnk>.
                </para>
            </step1>
            <figure id="f0347033" figsize="pg-wide">
                <graphic filename="../tsifigures/G0347033.webp" type="webp" scalefit="1" scalefitwidth="248px"
                         scalefitheight="312px"/>
                <caption>Figure 3. Air Regulator</caption>
                <calloutgroup>
                    <callout1>1. INLET AIR HOSE</callout1>
                    <callout1>2. INLET FITTING</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Remove bolts holding air regulator to lining
                    <hotlnk xrefid="f0347033">(Figure 3)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Remove inlet side fitting
                    <hotlnk xrefid="f0347033">(Figure 3)</hotlnk>.
                </para>
            </step1>
            <figure id="f0347034" figsize="pg-wide">
                <graphic filename="../tsifigures/G0347034.webp" type="webp" scalefit="1" scalefitwidth="312px"
                         scalefitheight="312px"/>
                <caption>Figure 4. Water Filter / Air Regulator</caption>
                <calloutgroup>
                    <callout1>1. WATER SEPARATOR ASSEMBLY</callout1>
                    <callout1>2. AIR FITTING FROM KIT</callout1>
                </calloutgroup>
            </figure>
            <step1>
                <para count="1">Install fitting, Part Number 443978, into the air regulator
                    <hotlnk xrefid="f0347034">(Figure 4 )</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Install fitting removed from air regulator on the opposite side of the water separator
                    <hotlnk xrefid="f0347034">(Figure 4)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Install water separator, Part Number 446640001, onto air regulator assembly
                    <hotlnk xrefid="f0347034">(Figure 4)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Reinstall bolts securing air regulator assembly to lining
                    <hotlnk xrefid="f0347034">(Figure 4)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Reattach 1/4" air hose to fitting on water separator
                    <hotlnk xrefid="f0347034">(Figure 4)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Reattach 1/4" air hose to air tank
                    <hotlnk xrefid="f0347031">(Figure 1)</hotlnk>.
                </para>
            </step1>
            <step1>
                <para count="1">Test door for proper operation.</para>
            </step1>
        </svcproc>
    </tsi>
</isis>
