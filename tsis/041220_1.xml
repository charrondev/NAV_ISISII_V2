    <stitle>TSI 04-12-20 - International&#174; VT 365 Upper Oil Pan Assembly</stitle>
    <tsi id="tSI041220" year="2004" tsitype="engine">
        <tsinumber>04-12-20</tsinumber>
        <tsidate>October 2004</tsidate>
        <subjectfile>Engine</subjectfile>
        <subjectgroup>
            <subject>International&#174; VT 365 Upper Oil Pan Assembly</subject>
        </subjectgroup>
        <apply>
            <configure>
                <engfamgroup/>

                <engfam>VT 365
