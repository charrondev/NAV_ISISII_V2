    <stitle>TSI 04-16-04 - Improved Air Conditioner (AC) Condenser Tube Support for HPV Models</stitle>
    <tsi id="tsi041604" tsitype="truck">
        <tsinumber>04-16-04</tsinumber>
        <tsidate>June, 2004</tsidate>
        <subjectfile>CAB</subjectfile>
        <subjectgroup>
            <subject>Improved Air Conditioner (AC) Condenser Tube Support for HPV Models</subject>
        </subjectgroup>
