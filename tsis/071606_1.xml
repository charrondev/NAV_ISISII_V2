<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>TSI 07-16-06 - HVAC Blend Air Door Adjustment in 5000i and 9000i Models</stitle>
    <tsi id="tsi071606" tsitype="truck">
        <tsinumber>07-16-06</tsinumber>
        <tsidate>December 2007</tsidate>
        <subjectfile>CAB</subjectfile>
        <subjectgroup>
            <subject>HVAC Blend Air Door Adjustment in 5000i and 9000i Models</subject>
        </subjectgroup>
        <distribution dealer="yes" fleet="yes" bodybuilder="no" isis_cd="yes"/>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>5500i</truckmodel>
                <truckmodel>5600i</truckmodel>
                <truckmodel>5900i</truckmodel>
                <truckmodel>9200i</truckmodel>
                <truckmodel>9400i</truckmodel>
                <truckmodel>9900i</truckmodel>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>For proper air temperature control, the blend air door must be adjusted and working properly.
                </para>
            </geninfo>
        </description>
        <svcproc svcproctype="repair" graphiccount="1">
            <title>Service Procedure</title>
            <specpara>
                <warning>
                    <para>To avoid personal injury or death, shift transmission to neutral or park, set parking brake,
                        and block wheels before doing diagnostic or service procedures.
                    </para>
                </warning>
            </specpara>
            <step1>
                <para count="1">Remove the passenger seat.</para>
            </step1>
            <step1>
                <para count="1">Remove the top cover of the HVAC unit.</para>
            </step1>
            <step1>
                <para count="1">Turn the key on.</para>
            </step1>
            <step1>
                <para count="1">Turn the temperature control knob to cold.</para>
            </step1>
            <step1>
                <para count="1">Verify that the door opens all the way.</para>
            </step1>
            <step1>
                <para count="1">Turn the temperature control knob to hot.</para>
            </step1>
            <step1>
                <para count="1">Verify that the door closes all the way.</para>
            </step1>
            <step1>
                <para count="1">In the event the door does not open or close all the way, adjust the linkage in the
                    white clip at the actuator motor. See Figure 1 for clip location.
                </para>
            </step1>
            <figure id="f07160601" figsize="pg-wide">
                <graphic filename="../tsifigures/G07160601.webp" type="webp" scalefit="1" scalefitwidth="312px"
                         scalefitheight="312px"/>
                <caption>Figure 1. Blend Air Door Linkage Adjustment Clip</caption>
            </figure>
            <step1>
                <para count="1">Turn the ignition off.</para>
            </step1>
            <step1>
                <para count="1">Install the top cover.</para>
            </step1>
            <step1>
                <para count="1">Install the passenger seat.</para>
            </step1>
        </svcproc>
    </tsi>
</isis>
