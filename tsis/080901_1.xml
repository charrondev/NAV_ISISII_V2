<?xml-stylesheet type="text/xsl" href="../isisxsl.xsl"?>
<isis lang="en">
    <stitle>TSI 08-09-01 - Hood Insulation on 5500i and 5600i</stitle>
    <tsi id="tsi080901" tsitype="truck">
        <tsinumber>08-09-01</tsinumber>
        <tsidate>February 2008</tsidate>
        <subjectfile>Front End Sheet Metal</subjectfile>
        <subjectgroup>
            <subject>Hood Insulation on 5500i and 5600i</subject>
        </subjectgroup>
        <distribution dealer="yes" fleet="yes" bodybuilder="no" isis_cd="yes"/>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>5500i</truckmodel>
                <truckmodel>5600i</truckmodel>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>The washers holding up the under-hood insulation on 5500i and 5600i model trucks sometimes fall
                    off, allowing the insulation to hang freely in the engine compartment.
                </para>
            </geninfo>
        </description>
        <svcproc svcproctype="repair" graphiccount="1">
            <title>Service Procedure</title>
            <specpara>
                <warning>
                    <para>To avoid personal injury or death, shift transmission to neutral or park, set parking brake,
                        and block wheels before doing diagnostic or service procedures.
                    </para>
                </warning>
            </specpara>
            <step1>
                <para count="1">To remedy this problem, complete the normal installation with washer and add pushnut,
                    part number 3517281C1, over the retaining washer.
                </para>
            </step1>
            <figure id="f08090101" figsize="pg-wide">
                <graphic filename="../tsifigures/G08090101.webp" type="webp" scalefit="1" scalefitwidth="502px"
                         scalefitheight="312px"/>
            </figure>
        </svcproc>
    </tsi>
</isis>
