<isis lang="en">
    <stitle>TSI 91-02-01 - Standardized Tie Rod Ends and Tie Rod Tube Replacement On Discontinued Steer Axle Codes
        02337(SBA) and 02343, With Drop Tie Rod Ends
    </stitle>
    <tsi id="tsi910201" tsitype="truck">
        <tsinumber>91-02-01</tsinumber>
        <tsidate>May, 1991</tsidate>
        <subjectfile>FRONT AXLE</subjectfile>
        <subjectgroup>
            <subject>Standardized Tie Rod Ends and Tie Rod Tube Replacement On Discontinued Steer Axle Codes 02337(SBA)
                and 02343, With Drop Tie Rod Ends
            </subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>8100</truckmodel>
