    <stitle>TSI 92-04-01 - Caliper Support Shims for Hydraulic Disc Brake Codes 04114, 04145, 04146, 04237 and 04238
    </stitle>
    <tsi id="tsi920401" tsitype="truck">
        <tsinumber>92-04-01</tsinumber>
        <tsidate>August, 1992</tsidate>
        <subjectfile>BRAKES</subjectfile>
        <subjectgroup>
            <subject>Caliper Support Shims for Hydraulic Disc Brake Codes 04114, 04145, 04146, 04237 and 04238</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>1000</truckmodel>
                <truckmodel>3000</truckmodel>
                <truckmodel>4000</truckmodel>
