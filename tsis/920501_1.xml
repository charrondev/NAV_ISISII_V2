    <stitle>TSI 92-05-01 - Repair For Turn Signal Canceling Function</stitle>
    <tsi id="tsi920501" tsitype="truck">
        <tsinumber>92-05-01</tsinumber>
        <tsidate>May, 1992</tsidate>
        <subjectfile>STEERING</subjectfile>
        <subjectgroup>
            <subject>Repair For Turn Signal Canceling Function</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>3000</truckmodel>
