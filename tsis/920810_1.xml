<isis lang="en">
    <stitle>TSI 92-08-10 - Ammeter Installation Procedure</stitle>
    <tsi id="tsi920810" tsitype="truck">
        <tsinumber>92-08-10</tsinumber>
        <tsidate>August, 1992</tsidate>
        <subjectfile>ELECTRICAL</subjectfile>
        <subjectgroup>
            <subject>Ammeter Installation Procedure</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>1000
                    <daterange>
                        <startdate>03/15/1992</startdate>
                    </daterange>
                </truckmodel>
                <truckmodel>2000
                    <daterange>
                        <startdate>03/15/1992</startdate>
                    </daterange>
                </truckmodel>
                <truckmodel>3000
                    <daterange>
                        <startdate>03/15/1992</startdate>
                    </daterange>
                </truckmodel>
                <truckmodel>4000
                    <daterange>
                        <startdate>03/15/1992</startdate>
                    </daterange>
                </truckmodel>
                <truckmodel>8000
                    <daterange>
