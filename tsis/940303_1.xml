    <stitle>TSI 94-03-03 - Heavy Duty Front Axle Shock Absorbers</stitle>
    <tsi id="tsi940303" tsitype="truck">
        <tsinumber>94-03-03</tsinumber>
        <tsidate>December, 1994</tsidate>
        <subjectfile>SPRINGS</subjectfile>
        <subjectgroup>
            <subject>Heavy Duty Front Axle Shock Absorbers</subject>
        </subjectgroup>
        <apply>
