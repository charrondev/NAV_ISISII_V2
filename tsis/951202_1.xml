    <stitle>TSI 95-12-02 - Air Cleaner Air Intake Duct to Air Cleaner Housing Modification</stitle>
    <tsi id="tsi951202" tsitype="truck">
        <tsinumber>95-12-02</tsinumber>
        <tsidate>January, 1995</tsidate>
        <subjectfile>ENGINE</subjectfile>
        <subjectgroup>
            <subject>Air Cleaner Air Intake Duct to Air Cleaner Housing Modification</subject>
        </subjectgroup>
        <apply>
