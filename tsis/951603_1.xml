    <stitle>TSI 95-16-03 - Heavy Duty Blower Motor</stitle>
    <tsi id="tsi951603" tsitype="truck">
        <tsinumber>95-16-03</tsinumber>
        <tsidate>October, 1995</tsidate>
        <subjectfile>CAB</subjectfile>
        <subjectgroup>
            <subject>Heavy Duty Blower Motor</subject>
        </subjectgroup>
