            <subject>Steer Axle and Vari-Rate Spring Bushings and Pins - Wear Limits</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>4000</truckmodel>
                <truckmodel>4200</truckmodel>
                <truckmodel>4300</truckmodel>
