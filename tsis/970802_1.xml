    <stitle>TSI 97-08-02 - Allison AT/MT Transmissions Used with International T 444E, DT 466E and 530E Engines</stitle>
    <tsi id="tSI970802" tsitype="truck">
        <tsinumber>97-08-02</tsinumber>
        <tsidate>March, 1997</tsidate>
        <subjectfile>ELECTRICAL</subjectfile>
