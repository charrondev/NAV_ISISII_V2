<isis lang="en">
    <stitle>TSI 97-12-10 - Accelerator Cable Over-Travel Device Replacement</stitle>
    <tsi id="tsi971210" tsitype="truck">
        <tsinumber>97-12-10</tsinumber>
        <tsidate>May, 1997</tsidate>
        <subjectfile>ENGINE</subjectfile>
        <subjectgroup>
            <subject>Accelerator Cable Over-Travel Device Replacement</subject>
        </subjectgroup>
        <apply>
            <configure>
                <truckmodelgroup/>

                <truckmodel>2000</truckmodel>
                <truckmodel>3000</truckmodel>
                <truckmodel>4000</truckmodel>
                <truckmodel>8000</truckmodel>
            </configure>
        </apply>
        <description>
            <geninfo>
                <para>In the event that an accelerator cable over-travel device becomes non-functional, an improved
                    over-travel device is available for service. It is not necessary to replace the accelerator cable
                    assembly.
                </para>
                <specpara>
                    <note>
                        <para>This TSI letter applies to 2000, 3600, 3800, 4000, and 8000 Models with DT-466 PLN engines
                            only.
                        </para>
                    </note>
                </specpara>
            </geninfo>
        </description>
        <partsinfo>
            <table id="t9712101">
                <title>Parts Information</title>
                <tgroup cols="3">
                    <colspec colnum="1" colname="sqcolumn1" colwidth="1.25in"/>
                    <colspec colnum="2" colname="sqcolumn2" colwidth="2.5in"/>
